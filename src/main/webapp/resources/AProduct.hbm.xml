<?xml version='1.0' encoding='UTF-8'?>    
    <!DOCTYPE hibernate-mapping PUBLIC    
              "-//Hibernate/Hibernate Mapping DTD 5.3//EN"    
              "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">    
        
<hibernate-mapping>    
    <class name="com.to.AProduct" table="APRODUCT">    
        <id name="prID" type="int" column="pid">    
            <generator class="increment"></generator>    
        </id>
        <property name="prName" column="pname" type="string"></property>    
        <property name="ProductCategory" column="ProductCategory" type="string"></property>    
        <property name="prPrice" column="pprice" type="float"></property>    
        <property name="pdate" column="pdate" type="date"></property>    
    </class>
    
</hibernate-mapping>    